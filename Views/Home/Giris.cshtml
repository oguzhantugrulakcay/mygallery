@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@model mygallery.Models.ViewModels.LoginViewModel
<div class="vertical-align-wrap">
    <div class="vertical-align-middle auth-main">
        <div class="auth-box">
            <div class="top">
                <img src="../images/logo.png" alt="Lucid">
            </div>
            <div class="card">
                <form action="/giris" method="post">
                <div class="header">
                    <p class="lead">Hesaba Giriş yap</p>
                    @if (Model.HasError)
                    {
                        <p class="text-danger">@Model.ErrorDesc</p>
                    }
                </div>
                <div class="body">
                    <div class="form-group">
                        <label for="signin-email" class="control-label sr-only">Email</label>
                        <input name="LoginName" class="form-control" value="@Model.LoginName"
                            placeholder="Kullanıcı adınızı giriniz...">
                    </div>
                    <div class="form-group">
                        <label for="signin-password" class="control-label sr-only">Password</label>
                        <input type="password" name="LoginPassword" class="form-control" value="@Model.LoginPassword"
                            placeholder="Şifrenizi giriniz...">
                    </div>
                    <div class="form-group clearfix">
                        <label class="fancy-checkbox element-left">
                            <input name="RememberMe" type="checkbox">
                            <span>Beni Hatırla</span>
                        </label>
                    </div>
                    <button type="submit" id="cmdLogin" class="btn btn-primary btn-lg btn-block">Giriş</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
